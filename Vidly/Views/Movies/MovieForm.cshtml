@model Vidly.ViewModels.MoviewFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
<br />
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.ReleaseDate, new { @class = "col-sm-2 col-form-label col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ReleaseDate)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.GenreId, new { @class = "col-sm-2 col-form-label col-form-label-lg" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.GenreId)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(m => m.NumberInStock, new { @class = "col-sm-2 col-form-label col-form-label-lg" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.NumberInStock, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NumberInStock)
        </div>
    </div>

    @*<div class="form-group row">
            @Html.LabelFor(m => m.DateAdded, new { @class = "col-sm-2 col-form-label col-form-label-lg", @type="hidden"})
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.DateAdded, "{0:d MMM yyyy}", new { @readonly = true, @class = "form-control", @value= "01 Apr 2020", @type="hidden" })
            </div>
        </div>*@

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-3">
            <button type="submit" class="btn btn-success btn-block">Save</button>
        </div>
    </div>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}